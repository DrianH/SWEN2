<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <BorderPane prefHeight="176.0" prefWidth="350.0" AnchorPane.bottomAnchor="-2.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <center>
                <VBox prefWidth="350.0" BorderPane.alignment="CENTER">
                    <children>

                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Date">
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                        </Text>
                        <DatePicker fx:id="dateSelection">
                            <VBox.margin>
                                <Insets bottom="15.0"/>
                            </VBox.margin>
                        </DatePicker>

                        <Text layoutX="20.0" layoutY="33.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Comment">
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                        </Text>
                        <TextArea fx:id="commentTextArea" prefHeight="200.0" prefWidth="200.0" wrapText="true">
                            <VBox.margin>
                                <Insets bottom="15.0"/>
                            </VBox.margin>
                        </TextArea>

                        <Text layoutX="20.0" layoutY="160.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Total Time hh:mm">
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                        </Text>
                        <TextField fx:id="totalTimeField" layoutX="20.0" layoutY="169.0">
                            <VBox.margin>
                                <Insets bottom="15.0"/>
                            </VBox.margin>
                        </TextField>

                        <HBox alignment="TOP_RIGHT" prefWidth="200.0">
                            <children>

                                <Button mnemonicParsing="false" onAction="#cancelTourLogButton" text="Cancel">
                                    <HBox.margin>
                                        <Insets right="15.0"/>
                                    </HBox.margin>
                                </Button>
                                <Button layoutX="295.0" layoutY="10.0" mnemonicParsing="false" onAction="#applyTourLogButton" text="Save"/>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
