    <!-- ~~~~~~~~~~~~~~~~~~~ UPPER SIDE OF THE TOUR PLANNER ~~~~~~~~~~~~~~~~~~~ -->
    <MenuBar GridPane.columnIndex="0" GridPane.columnSpan="24" GridPane.rowIndex="0">
        <menus>
            <Menu mnemonicParsing="false" text="File">
                <items>
                    <MenuItem mnemonicParsing="false" text="Close"/>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <items>
                    <MenuItem mnemonicParsing="false" text="Delete"/>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Option">
                <items>
                    <MenuItem mnemonicParsing="false" text="Options"/>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <items>
                    <MenuItem mnemonicParsing="false" text="About"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <TextField promptText="Search" GridPane.columnIndex="1" GridPane.columnSpan="22" GridPane.rowIndex="1"/>


    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~ TOUR SIDE OF THINGS ~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <Label text="Tours" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2"/>
    <Button minWidth="40" onAction="#onTourCreateClicked" text="+" GridPane.columnIndex="2" GridPane.columnSpan="2"
            GridPane.rowIndex="2"/>
    <Button minWidth="40" onAction="#onTourRemoveClicked" text="-" GridPane.columnIndex="3" GridPane.columnSpan="2"
            GridPane.rowIndex="2"/>
    <Button minWidth="40" onAction="#onTourEditClicked" text="[]" GridPane.columnIndex="4" GridPane.columnSpan="2"
            GridPane.rowIndex="2"/>
    <ListView GridPane.columnIndex="0" GridPane.columnSpan="6" GridPane.rowIndex="3" GridPane.rowSpan="21"/>

    <TextField promptText="Title of the Route" GridPane.columnIndex="6" GridPane.columnSpan="17" GridPane.rowIndex="2"/>
    <TabPane tabClosingPolicy="UNAVAILABLE" GridPane.columnIndex="6" GridPane.columnSpan="18" GridPane.rowIndex="3"
             GridPane.rowSpan="12">
        <tabs>
            <Tab text="Route">
                <content>
                    <VBox>
                        <TextField promptText="From"/>
                        <TextField promptText="To"/>
                        <Button onAction="#onShowRouteClicked" text="Show Route"/>
                        <ImageView fitHeight="360" fitWidth="360" pickOnBounds="true" preserveRatio="true"/>
                    </VBox>
                </content>
            </Tab>
            <Tab text="Description">
                <content>
                    <TextArea promptText="Describe your route..." GridPane.columnIndex="6" GridPane.columnSpan="18"
                              GridPane.rowIndex="4" GridPane.rowSpan="11"/>
                </content>
            </Tab>
        </tabs>
    </TabPane>


    <!-- ~~~~~~~~~~~~~~~~~~~~~~ TOUR-LOGS SIDE OF THINGS ~~~~~~~~~~~~~~~~~~~~~~ -->
    <Label text="Logs" GridPane.columnIndex="6" GridPane.rowIndex="15"/>
    <Button minWidth="40" onAction="#onTourLogCreateClicked" text="+" GridPane.columnIndex="7" GridPane.columnSpan="2"
            GridPane.rowIndex="15"/>
    <Button minWidth="40" onAction="#onTourLogRemoveClicked" text="-" GridPane.columnIndex="8" GridPane.columnSpan="2"
            GridPane.rowIndex="15"/>
    <Button minWidth="40" onAction="#onTourLogEditClicked" text="[]" GridPane.columnIndex="9" GridPane.columnSpan="2"
            GridPane.rowIndex="15"/>
    <TableView GridPane.columnIndex="6" GridPane.columnSpan="18" GridPane.rowIndex="16" GridPane.rowSpan="8">
        <columns>
            <TableColumn prefWidth="100.0" text="Date"/>
            <TableColumn prefWidth="100.0" text="Duration"/>
            <TableColumn prefWidth="100.0" text="Distance"/>
        </columns>
    </TableView>
</GridPane>